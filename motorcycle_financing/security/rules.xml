<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Record Rules for Loan Applications -->
    
    <!-- Rule: Financing Users cannot modify or delete signed loans -->
    <record id="loan_application_user_rule" model="ir.rule">
        <field name="name">Users cannot modify or delete signed loans</field>
        <field name="model_id" ref="model_loan_application"/>
        <field name="domain_force">[('state', '!=', 'signed')]</field>
        <field name="groups" eval="[(4, ref('group_financing_user'))]"/>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- Rule: Financing Admins have full access to all loans including signed ones -->
    <record id="loan_application_admin_rule" model="ir.rule">
        <field name="name">Loan Application Admin Rule</field>
        <field name="model_id" ref="model_loan_application"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_financing_admin'))]"/>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>
