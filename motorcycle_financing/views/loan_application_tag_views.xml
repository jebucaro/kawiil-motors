<odoo>
    <!-- Loan Application Tag Views -->
    <record id="loan_application_tag_action" model="ir.actions.act_window">
        <field name="name">Loan Application Tags</field>
        <field name="res_model">loan.application.tag</field>
        <field name="view_mode">list</field>
    </record>

    <record id="loan_application_tag_list_view" model="ir.ui.view">
        <field name="name">loan.application.tag.list.view</field>
        <field name="model">loan.application.tag</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>
</odoo>
