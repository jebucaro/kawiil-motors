<odoo>
    <!-- Loan Application Document Type Views -->
    <record id="loan_application_document_type_action" model="ir.actions.act_window">
        <field name="name">Document Types</field>
        <field name="res_model">loan.application.document.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="loan_application_document_type_list_view" model="ir.ui.view">
        <field name="name">loan.application.document.type.list.view</field>
        <field name="model">loan.application.document.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="loan_application_document_type_form_view" model="ir.ui.view">
        <field name="name">loan.application.document.type.form.view</field>
        <field name="model">loan.application.document.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
