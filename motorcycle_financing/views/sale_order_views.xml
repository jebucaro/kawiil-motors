<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.view.order.inherit.financing</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add always invisible field for conditional logic-->
            <field name="payment_term_id" position="after">
                <field name="is_financed" invisible="1"/><!-- This field is used to make the button invisible. This comment is mandatory to pass the check invisible test.-->
            </field>
            
            <button name="action_confirm" position="after">
                <button name="action_apply_loan" id="action_apply_loan" string="Apply Loan" class="btn-primary" type="object" invisible="not is_financed" groups="motorcycle_financing.group_financing_user"/>
            </button>
            
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="is_financed"/>
            </xpath>
            
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">draft,sent,loan,sale</attribute>
            </xpath>
            
            <xpath expr="//page[@name='order_lines']" position="after">
                <page string="Loan Applications" name="loan_applications" invisible="not is_financed" groups="motorcycle_financing.group_financing_user">
                    <field name="loan_application_ids"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
